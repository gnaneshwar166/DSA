Aim :To write a program queue operaction 

CODE:
#include <stdio.h>
#define SIZE 5

int queue[SIZE];
int front = -1, rear = -1;

void enqueue(int x) {
    if (rear == SIZE - 1) {
        printf("Queue Overflow!\n");
        return;
    }

    if (front == -1 && rear == -1) {   // First element
        front = rear = 0;
    } else {
        rear++;
    }

    queue[rear] = x;
    printf("%d inserted\n", x);
}

void dequeue() {
    if (front == -1) {
        printf("Queue Underflow!\n");
        return;
    }

    int item = queue[front];

    if (front == rear) {  // Only one element
        front = rear = -1;
    } else {
        front++;
    }

    printf("%d deleted\n", item);
}

void display() {
    if (front == -1) {
        printf("Queue is EMPTY!\n");
        return;
    }

    printf("Queue elements: ");
    for (int i = front; i <= rear; i++) {
        printf("%d ", queue[i]);
    }
    printf("\n");
}

int main() {
    int choice, value;

    while (1) {
        printf("\n--- Queue Menu ---\n");
        printf("1. Enqueue\n2. Dequeue\n3. Display\n4. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter value: ");
                scanf("%d", &value);
                enqueue(value);
                break;

            case 2:
                dequeue();
                break;

            case 3:
                display();
                break;

            case 4:
                return 0;

            default:
                printf("Invalid choice!\n");
        }
    }
}

OUTPUT:

